<odoo>
    <template id="inv_saleman_summary">
        <t t-call="web.html_container">
        <t t-call="web.external_layout">
               <div style="text-align:center">
                      <h2> Salesman Summary Report</h2>
                  </div>
              <table width="50%">
                  <tr>

                      <td style="text-align:left;">
                          <t t-if="docs.month">
                              <strong>Month:</strong>
                              <span t-esc="docs.month"/>
                              <!--                     <t t-if="docs.date_from">-->
                              <!--                     <span t-esc="docs.date_from.strftime('%d/%m/%Y')" />-->
                              <!--                     </t>-->
                          </t>
                      </td>

                      <td style="text-align:right;">
                          <t t-if="docs.week">
                          <strong>week:</strong>
                              <span t-esc="docs.week"/>
                          <!--                       <t t-if="docs.date_to">-->
                          <!--                       <span t-esc="docs.date_to.strftime('%d/%m/%Y')" />-->
                          <!--                       </t>-->
                          </t>
                      </td>
                  </tr>
              </table>
        <br/>
            <div class="page">

                        <table width="100%">
                           <t t-foreach="inv_data" t-as="inv">
                               <tr >
                                <td style="border:1px;text-align:center; solid;padding-left:2px;" colspan="6"><strong>Saleperson:</strong>
                                    <strong> <span t-esc="inv['name']"/> </strong></td>
                            </tr>
                            <tr>
                                <th style="border:1px solid;text-align:center;"><strong>NO</strong></th>
                                <th style="border:1px solid;text-align:center;"><strong>INV Ref</strong></th>
                                <th style="border:1px solid;text-align:center;"><strong>Product Cost</strong></th>
                                <th style="border:1px solid;text-align:center;"><strong>Other Cost</strong></th>
                                <th style="border:1px solid;text-align:center;"><strong>Fee Cost</strong></th>
                                <th style="border:1px solid;text-align:center;"><strong>Untax Amount</strong></th>
                                <th style="border:1px solid;text-align:center;"><strong>Profit</strong></th>
                            </tr>


                                <t t-foreach="inv['invoices_data']" t-as="inv_data">
                                <tr>
                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data_index+1"/>
                                </td>

                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data['inv_no']"/>
                                </td>
                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data['total_cost']"/>
                                </td>
                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data['other_cost']"/>
                                </td>
                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data['fee_amount']"/>
                                </td>
                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data['amount_tax_ex']"/>
                                </td>
                                <td style="border:1px solid;padding-left:2px;">
                                    <span t-esc="inv_data['profit']"/>
                                </td>

                            </tr>
                                </t>
                            <tr class="is-subtotal text-right">
                                <td colspan="4"></td>
                                <td style=" solid;padding-left:2px;" colspan="1">
                                    <strong class="mr16">Total INV Amount(UnTaxed):</strong>
                                </td>
                                <td style=" solid;padding-left:2px;" >
                                    <span t-esc="inv['total_untaxed']"/>
                                </td>
                            </tr>
                            <tr class="is-subtotal text-right">
                                <td colspan="4"></td>
                                <td style=" solid;padding-left:2px;" colspan="1">
                                    <strong class="mr16">Total Taxes:</strong>

                                </td>
                                <td style=" solid;padding-left:2px;" >
                                    <span t-esc="inv['total_tax']"/>
                                </td>
                            </tr>

                            <tr class="is-subtotal text-right">
                                <td colspan="4"></td>
                                <td style=" solid;padding-left:2px;" colspan="1">
                                    <strong class="mr16">Total Amount(Incl.Taxes):</strong>

                                </td>
                                <td style="solid;padding-left:2px;" >
                                    <span t-esc="inv['total_include_tax']"/>
                                </td>
                            </tr>

                            <tr class="is-subtotal text-right">
                                <td colspan="4"></td>
                                <td style="solid;padding-left:2px;" colspan="1">
                                    <strong class="mr16">Total Product Cost:</strong>
                                </td>
                                <td style="solid;padding-left:2px;" >
                                    <span t-esc="inv['total_cost']"/>
                                </td>
                            </tr>
                            <tr class="is-subtotal text-right">
                                <td colspan="4"></td>
                                <td style=" solid;padding-left:2px;" colspan="1">
                                    <strong class="mr16">Profit:</strong>
                                </td>
                                <td style=" solid;padding-left:2px;" >
                                    <span t-esc="inv['total_profit']"/>
                                </td>
                            </tr>
                            </t>

                        </table>
            </div>
        </t>
        </t>
    </template>
</odoo>