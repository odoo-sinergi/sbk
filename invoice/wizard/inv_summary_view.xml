<odoo>
    <data>
        <record id="view_inv_summary_report_wiz" model="ir.ui.view">
            <field name="name">invoice.summary.wiz.form</field>
            <field name="model">invoice.summary.wiz</field>
            <field name="arch" type="xml">
                <form string="Bank Report">
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                    <button type="object" name="check_report" string="Print Report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                </form>
            </field>
        </record>
          <record id="inv_summary_report_wiz" model="ir.actions.act_window">
            <field name="name">Invoice Summary  Report</field>
            <field name="res_model">invoice.summary.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_inv_summary_report_wiz"/>
        </record>
        <menuitem id="inv_summary_wiz_menu" parent="account.menu_finance_reports" action="inv_summary_report_wiz"/>
    </data>
</odoo>