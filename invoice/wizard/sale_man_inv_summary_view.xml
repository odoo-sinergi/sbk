<odoo>
    <data>
        <record id="view_saleman_inv_summary_report_wiz" model="ir.ui.view">
            <field name="name">saleman.invoice.summary.wizform</field>
            <field name="model">saleman.invoice.summary.wiz</field>
            <field name="arch" type="xml">
                <form string="Bank Report">
                    <group>
                        <group col="2">
                        <field name="report_type"/>
                            <field name="sale_person" widget="many2many_tags"/>
                        </group>
                        <group col="2">
                        <field name="year"/>
                            <field name="month" attrs="{'invisible': [('report_type','=','week')]}" />
                            <field name="week" attrs="{'invisible': [('report_type','=','month')]}" />
                        </group>
                    </group>
                    <footer>
                    <button type="object" name="check_report" string="Print Report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
                </form>
            </field>
        </record>
          <record id="inv_sale_summary_report_wiz" model="ir.actions.act_window">
            <field name="name">Invoice Saleman Summary  Report</field>
            <field name="res_model">saleman.invoice.summary.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_saleman_inv_summary_report_wiz"/>
        </record>
        <menuitem id="inv_sale_mansummary_wiz_menu" parent="account.menu_finance_reports" action="inv_sale_summary_report_wiz"/>
    </data>
</odoo>