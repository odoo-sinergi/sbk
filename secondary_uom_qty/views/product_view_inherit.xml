<odoo>

	<data>
	<record id="product_template_form_view_inherit_25" model="ir.ui.view">
	    <field name="name">product.template.inherit.second.uom.form</field>
	    <field name="model">product.template</field>
	    <field name="inherit_id" ref="product.product_template_form_view"/>
	    <field name="arch" type="xml">
	    	<field name="uom_id" position="after">
	    		<field name="secondary_uom_id" groups="product.group_uom" options="{'no_create': True}"/>
                <field name="custom_factor"/>
                <p class="oe_grey"> 1 * (reference unit) = ratio / (this unit)</p>
	    	</field>
	    	<button name="toggle_active" position="before">
	    		<button class="oe_stat_button"
                      name="dummy_btn"
                      icon="fa-cube"
                      type="object" attrs="{'invisible':[('type', '!=', 'product')]}">
                      <div class="o_field_widget o_stat_info">
                           <span class="o_stat_value">
                               <field name="secondary_uom_qty" widget="statinfo" nolabel="1" class="mr4"/>
                               <field name="second_uom_name"/>
                           </span>
                           <span class="o_stat_text">On Hand in <field name="second_uom_name"/></span>
                      </div>
               </button>
               <button class="oe_stat_button"
                      name="dummy_btn"
                      icon="fa-cube"
                      type="object" attrs="{'invisible':[('type', '!=', 'product')]}">
                      <div class="o_field_widget o_stat_info">
                           <span class="o_stat_value">
                               <field name="second_virtual_available" widget="statinfo" nolabel="1" class="mr4"/>
                               <field name="second_uom_name"/>
                           </span>
                           <span class="o_stat_text">Forecast in <field name="second_uom_name"/></span>
                      </div>
               </button>
	    	</button>
	    </field>
	 </record>
