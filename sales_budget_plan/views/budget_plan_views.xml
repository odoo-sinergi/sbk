<odoo>
	<record id="sales_budget_plan_form_view" model="ir.ui.view">
		<field name="name">sales_budget_plan.form.view</field>
		<field name="model">sale.sales_budget_plan</field>
		<field name="arch" type="xml">
			<form string="Sales Budget Plan">
				<group>
					<group>
						<field name="product_tmpl_id" string="Product" />
						<field name="product_id" groups="product.group_product_variant" domain="[('product_tmpl_id', '=', product_tmpl_id)]" options="{'no_create_edit': True}"/>
						<field name="user_id" />
						<field name="company_id" />
					</group>
					<group>
						<field name="date_start" />
						<field name="date_end" />
						<field name="is_active" />
						<field name="budget" />
						<field name="currency_id" />
					</group>
				</group>
			</form>
		</field>
	</record>
	<record id="sales_budget_plan_tree_view" model="ir.ui.view">
		<field name="name">sales_budget_plan.tree.view</field>
		<field name="model">sale.sales_budget_plan</field>
		<field name="arch" type="xml">
			<tree>
				<field name="product_id" />
				<field name="user_id" />
				<field name="date_start" />
				<field name="date_end" />
				<field name="is_active" />
				<field name="budget" />
				<field name="currency_id" />
			</tree>
		</field>
	</record>

</odoo>
