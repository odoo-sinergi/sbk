<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="stock.report_lot_barcode">
		<t t-call="web.basic_layout">
			<t t-foreach="docs" t-as="o">
				<t>
					<div class="page">
						<div class="oe_structure"/>
						<div class="row">
							<div class="col-xs-12" >
								<table class="table table-condensed" style="border-bottom: 0px solid white !important;">
									<tbody>
										<td style="font-size:30px;">
											<span  t-esc="'Product:'"/>
											<b  t-esc="'%s'%(o.product_id.name)"/>
										</td>
									</tbody>
								</table>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12" style="text-align: center;display:block;">
								<table class="table table-condensed" style="border-bottom: 3px solid black !important;">
									<thead>
										<th></th>
									</thead>
								</table>
								<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', o.name, 1200, 200)" style="margin-left:-50px;margin-top:0px;width:600px;height:100px"/>
							</div>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>
	<data>
		<record id="paperformat_lot" model="report.paperformat">
			<field name="name">SBK lot</field>
			<field name="default" eval="True" />
			<field name="format">custom</field>
			<field name="page_height">50</field>
			<field name="page_width">75</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">5</field>
			<field name="margin_bottom">0</field>
			<field name="margin_left">0</field>
			<field name="margin_right">0</field>
			<field name="header_line" eval="False" />
			<field name="header_spacing">5</field>
			<field name="dpi">90</field>
		</record>
	
		<record id="stock.action_report_lot_barcode" model="ir.actions.report">
			<field name="paperformat_id" ref="paperformat_lot"/>
		</record>



		
		
	</data>
</odoo>
