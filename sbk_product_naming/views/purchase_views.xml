<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_sbk">
            <field name="name">product.template.sbk.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <div class="row">
                        <div class="col-xs-12">
                            <label for="printout_name" string="Original Name"/>
                            <field name="printout_name" groups="sbk_product_naming.group_see_origin_name"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="product_template_search_view_inherit" model="ir.ui.view">
            <field name="name">product.template.search.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_search_view"/>
            <field name="arch" type="xml">
                <field name="name" position="replace">
                    <field name="name" string="Product" filter_domain="['|','|','|',('default_code','ilike',self),('name','ilike',self),('printout_name','ilike',self),('barcode','ilike',self)]"/>
                    <field name="printout_name" groups="sbk_product_naming.group_see_origin_name"/>
                </field>
            </field>
        </record>

