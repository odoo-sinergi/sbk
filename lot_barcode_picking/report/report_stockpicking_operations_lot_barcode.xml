<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- Add you code here -->
        <template id="report_picking_inherit" inherit_id="stock.report_picking">
            <xpath expr="//p[@t-field='o.note']" position="after">
                <div class="row table-no-boder-left">
                    <div class="col-xs-6" >
                        <table class="table table-condensed" style="height:100%">
                            <tr >
                                <td style="width: 100px;height:50px"><strong>Note</strong></td>
                                <td ><span t-field="o.note"/></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[@class='page']" position="attributes">
                <attribute name="class">page sbk-border-table</attribute>
            </xpath>
            <xpath expr="//tr[@t-foreach='move.move_line_ids.sorted(key=lambda ml: ml.location_id.id)' and @t-as='ml']/td[2]" position="replace">
                <td width="50%">
                    <div class="container" style="
                        display: flex;
                        flex-direction: column;
                        flex-wrap: wrap;
                        justify-content: center;
                        align-items: center;
                        align-content: center;
                        display: flex;
                    ">     
                        <t t-if="has_serial_number and ml.product_id.tracking != 'none'">
                            <div>
                                    <img t-if="len(ml.lot_id.name) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', ml.lot_id.name, 600, 100)" style="width:100%;height:50px"/>
                                    <img t-elif="len(ml.lot_id.name) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', ml.lot_id.name, 600, 100)" style="width:100%;height:50px"/>
                                    <img t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', ml.lot_id.name, 600, 100)" style="width:100%;height:50px"/>
                            </div>
                            <div class="col-xs-8">
                                <span t-field="ml.lot_id"/>
                                <span t-if="not ml.lot_id" t-field="ml.lot_name"/>
                            </div>
                        </t>
                        <div class="col-xs-8">
                            <span t-field="ml.qty_done"/>
                            <t t-if="o.state!='done'">
                                / <span t-field="ml.product_uom_qty"/>
                            </t>
                        </div>
                    </div>
                </td>
            </xpath>
        </template>
    </data>
</odoo>