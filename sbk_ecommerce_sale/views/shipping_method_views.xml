<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <record id="sale_shippingmethod_view_form" model="ir.ui.view">
            <field name="name">sale.shippingmethod.form</field>
            <field name="model">sale.shippingmethod</field>
            <field name="arch" type="xml">
                <form string="Shipping Method">
                    <sheet>
                      <!-- <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div> -->
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Shipping Method"/>
                            <h1>
                                <field name="name" placeholder="Method name..."/>
                            </h1>
                            <!-- <label for="is_dropshipping" class="oe_edit_only" string="Is Dropshipping?"/> -->
                            <!-- <field name="is_dropshipping"/> -->
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_shippingmethod_tree" model="ir.ui.view">
            <field name="name">sale.shippingmethod.tree</field>
            <field name="model">sale.shippingmethod</field>
            <field name="arch" type="xml">
                <tree string="Sales Team">
                    <field name="name"/>
                    <!-- <field name="active" invisible="1"/> -->
                    <!-- <field name="is_dropshipping"/> -->
                </tree>
            </field>
        </record>
        <record id="sale_shippingmethod_action" model="ir.actions.act_window">
            <field name="name">Shipping Method</field>
            <field name="res_model">sale.shippingmethod</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Define a new Shipping Method
                </p>
            </field>
        </record>
        <record id="action_sale_shippingmethod_form_view3" model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_shippingmethod_tree"/>
            <field name="act_window_id" ref="sale_shippingmethod_action"/>
        </record>


    </data>
</odoo>