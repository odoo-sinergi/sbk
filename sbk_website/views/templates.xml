<odoo>
        <template id="extra_info_inherit" name="Checkout Extra Info" inherit_id="website_sale.extra_info">
            <xpath expr="//div[@id='wrap']" position="replace">
                <div id="wrap">
                <div class="container oe_website_sale">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 oe_cart">
                            <div class="row">
                                <t t-call="website_sale.wizard_checkout">
                                    <t t-set="step" t-value="30"/>
                                </t>
                            </div>
                            <div t-if="order.estimated_freight == 0" style="margin-top:25px;">
                            <span style="color: red; font-size: 20px; font-weight: bold;">Please wait for our admin to update the delivery cost for you, we will update you soon </span>
                            </div>
                            <div class="row" t-if="order.estimated_freight > 0">
                              <span style="color: green; font-size: 20px; font-weight: bold;">Admin added the delivery cost, please check your email to confirm this order. </span>
                              <table class="table">
                                        <tbody>
                                            <tr>
                                                <td colspan="2">
                                                    <!--<t t-esc="order.payment_acquirer_id.name"/>-->
                                                   <strong>Wire Transfer</strong> 
                                                </td>
                                                <td class="text-right" width="150">
                                                    <strong>Delivery Charges:</strong>
                                                </td>
                                                <td class="text-right" width="100">
                                                    <strong t-field="order.estimated_freight" id="delivery_amt" t-options="{'widget': 'monetary', 'display_currency': order.pricelist_id.currency_id}"/>
                                                </td>
                                                <td class="text-right" width="100">
                                                    <strong>Total:</strong>
                                                </td>
                                                <td class="text-right" width="100">
                                                    <strong t-field="order.amount_total" t-options="{'widget': 'monetary', 'display_currency': order.pricelist_id.currency_id}"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                            </div>
                            <!--<div class="row" t-if="order.estimated_freight > 0">-->
                            <div class="row" t-if="1==2">
                                <div class="col-md-12 o_website_sale_rightfit">
                                    <div class="panel-body" style="border:1px solid;">
                                        <!--<t t-raw="order.payment_acquirer_id.post_msg"/>-->
                                        
                                        <h4>Please use the following transfer details</h4>
                                        <table>
                                          <tr>
                                            <td>Bank Name</td>
                                            <td>BCA Kcp Pecenongan</td>
                                          </tr>
                                          <tr>
                                            <td>Bank Account</td>
                                            <td>5890203835</td>
                                          </tr>
                                          <tr>
                                            <td>Title</td>
                                            <td>PT sumber berlian kimia</td>
                                          </tr>
                                          <tr>
                                            <td>Communication</td>
                                            <td>Please use the order name as communication reference.</td>
                                          </tr>
                                        </table>
                                    </div>
                                   
                                    <!--<h2 class="mb8 mt8">Payment Information</h2>-->
                                    <h3 class="text-left">
                                        <strong>Payment Information:</strong>
                                    </h3>
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <td colspan="2">
                                                    <!--<t t-esc="order.payment_acquirer_id.name"/>-->
                                                   <strong>Wire Transfer</strong> 
                                                </td>
                                                <td class="text-right" width="150">
                                                    <strong>Delivery Charges:</strong>
                                                </td>
                                                <td class="text-right" width="100">
                                                    <strong t-field="order.estimated_freight" id="delivery_amt" t-options="{'widget': 'monetary', 'display_currency': order.pricelist_id.currency_id}"/>
                                                </td>
                                                <td class="text-right" width="100">
                                                    <strong>Total:</strong>
                                                </td>
                                                <td class="text-right" width="100">
                                                    <strong t-field="order.amount_total" t-options="{'widget': 'monetary', 'display_currency': order.pricelist_id.currency_id}"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    
                                    <!--<form action="/website_form/" method="post" class="s_website_form form-horizontal container-fluid" enctype="multipart/form-data" data-force_action="shop.sale.order" data-model_name="sale.order" data-success_page="/shop/payment">-->
                                    <!--<form action="/website_form/" method="post" class="s_website_form form-horizontal container-fluid" enctype="multipart/form-data" data-force_action="shop.sale.order" data-model_name="sale.order" data-success_page="/shop/confirmation">-->
                                    <form action="/website_form/" method="post" class="s_website_form form-horizontal container-fluid" enctype="multipart/form-data" data-force_action="shop.sale.order" data-model_name="sale.order" data-success_page="/shop/confirmation">
                                       <div class="form-group form-field">
                                            <div class="col-md-5 col-sm-4 text-right-not-xs" style="text-align: justify;" >
                                                <label class="control-label" for="client_order_ref">Your Reference</label>
                                            </div>
                                            <div class="col-md-12 col-sm-8">
                                                <input type="text" placeholder="Please input your bank transaction details/reference number and other necessary information" class="form-control o_website_form_input" name="client_order_ref"/>
                                            </div>
                                        </div>
                                        <!--<div class="form-group form-field o_website_form_custom">
                                            <div class="col-md-3 col-sm-4 text-right-not-xs">
                                                <label class="control-label" for="Give us your feedback...">Give us your feedback...</label>
                                            </div>
                                            <div class="col-md-7 col-sm-8">
                                                <textarea class="form-control o_website_form_input" name="Give us your feedback..."/>
                                            </div>
                                        </div>-->
                                        <div class="form-group form-field o_website_form_required_custom">
                                            <div class="col-md-5 col-sm-4 text-right-not-xs" style="text-align: justify;" >
                                                <label class="control-label" for="a_document">Attach Bank Transfer Document</label>
                                            </div>
                                            <div class="col-md-12 col-sm-8">
                                                <input type="file" class="form-control o_website_form_input" name="a_document" required=""/>
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <div class="col-md-3 col-sm-4">
                                            </div>
                                            <div class="col-md-7 col-sm-8">
                                                <a href="/shop/checkout" class="btn btn-default mb32 pull-left"><span class="fa fa-long-arrow-left"/> Previous</a>
                                                <!--<a class="btn btn-primary pull-right mb32 o_website_form_send" href="/shop/confirm_order">Next <span class="fa fa-long-arrow-right"/></a>-->
                                                <a t-if="order.estimated_freight > 0" class="btn btn-primary pull-right mb32 o_website_form_send" onclick="document.getElementById('send_email').click()" name="Submit" href="/shop/payment">Next <span class="fa fa-long-arrow-right"/></a>
                                                <span id="o_website_form_result"/>
                                            </div>
                                        </div>
                                    </form>
                                     <form action="/website_form/" method="post" class="s_website_form form-horizontal container-fluid mt32" enctype="multipart/form-data" data-model_name="mail.mail">
                                           <a style="visibility:hidden;" class="btn btn-primary pull-right mb32 o_website_form_send" id="send_email" name="SubmitEmail" href="#">Email<span class="fa fa-long-arrow-right"/></a>
                                           <!--<span id="o_website_form_result"/>-->
                                          <!--<div class="form-group form-field">
                                            <div class="col-md-5 col-sm-4 text-right-not-xs" style="text-align: justify;" >
                                                <label class="control-label" for="Reference">Your Reference</label>
                                            </div>
                                            <div class="col-md-12 col-sm-8">
                                                <input type="text" id="ref" class="form-control o_website_form_input" name="Reference"/>
                                            </div>
                                        </div>-->
                                        <div class="form-group form-field o_website_form_required_custom">
                                            <!--<div class="col-md-5 col-sm-4 text-right-not-xs" style="text-align: justify;" >
                                                <label class="control-label" for="Bank_document">Attach Bank Transfer Document</label>
                                            </div>-->
                                            <div class="col-md-12 col-sm-8">
                                                <input type="hidden" id="doc" class="form-control o_website_form_input" name="Bank_document" required=""/>
                                            </div>
                                        </div>
                                          <!--<input class="form-field" type="hidden" name="email_to_sale" id="email_to_sale" t-att-value="order.user_id.login"/>-->
                                          <input class="form-field" type="hidden" name="email_to" id="email_to" t-att-value="order.user_id.login"/>
                                          <input class="form-field" type="hidden" name="subject" id="subject" value="Payment Submited"/>
                                          <input class="form-field" type="hidden" name="body_html" id="body_html" 
                                          t-att-value="'Payment has done against sale order no ' + order.name + ' by ' +  order.partner_id.name + ' plz verify'"/>
                                      </form>   
                                    <!--<t t-call="website_sale.payment_confirmation_status"/>-->
                                    
                                </div>
                            </div>
                            <!--
                                Sample Code to re-inject previous value is needed.
                                <script>
                                    $("input[name='client_order_ref']").val(_.unescape('<t t-esc="escape(website_sale_order.client_order_ref or '') or ''"/>'));
                                </script>
                            -->
                        </div>
                    </div>
                </div>
            </div>
            </xpath>
             <xpath expr="." position="inside">
                <script type="text/javascript">
                    window.onload = function () {
                        document.getElementsByName("a_document")[0].addEventListener('change', doThing);
                        function doThing(){
                            var doc = document.getElementById('doc');
                            doc.vlaue=this.value;
                        }
                    }
                </script>
            </xpath>
        </template>

        <template id="clarico_cart_extra_info_inherit" inherit_id="clarico_cart.clarico_cart_extra_info" >
            <xpath expr="//li[@id='step30']" position="replace">
                <li t-att-class="(step==30 and 'text-primary') or 'text-muted'" id="step30">
                <div class="stepwizard-step extra-step-option">
                    <t t-if="step&gt;30 and step&lt;50">
                        <a href="/shop/extra_info" class="text-success">3</a>
                        <p>Order Status</p>
                        <span class="chevron"></span>
                    </t>
                    <t t-if="not (step&gt;30 and step&lt;50)">
                        <a href="/shop/extra_info" class="text-success">3</a>
                        <p>Order Status</p>
                        <span class="chevron"></span>
                    </t>
                </div>
            </li>
            </xpath>
        </template>

