<odoo>
    <data>
        <template id="row0">
            <div class="row">
                        <div class="col-xs-6">
                                    <table class="table table-condensed" >
                                        <tr >
                                            <td style="width: 100px"><strong>Bill To</strong></td>
                                            <td ><span t-field="o.partner_id"
                                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td t-if="o.is_dropshipping" style="width: 100px"><strong>Drop-Ship</strong></td>
                                        </tr>
                                        <tr t-if="o.type == 'out_invoice'">
                                            <td style="width: 100px"><strong>Ship To</strong></td>
                                            <td >
                                                <span t-field="o.partner_shipping_id"
                                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                            </td>
                                        </tr>
                                        <tr t-if="o.type == 'in_invoice'">
                                            <td style="width: 100px"><strong>Vendor Bill Number</strong></td>
                                            <td >
                                                <span t-field="o.reference"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                        <div class="col-xs-4 pull-right">
                                    <table class="table table-condensed">
                                        <tr >
                                            <td>
                                            <p t-if="o.type == 'in_invoice'">Bill date</p>
                                            <p t-if="o.type == 'out_invoice'">Invoice date</p>
                                            <p t-field="o.date_invoice" t-options='{"widget": "date"}'/>
                                            </td>

                                            <td>
                                            <p>Create date</p>
                                            <p class="text-center" t-field="o.create_date" t-options='{"widget": "date"}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <p>Due date</p>
                                                <p class="text-center" t-field="o.date_due" t-options='{"widget": "date"}'/>
                                            </td>
                                            <td>
                                                <p>Payment Term</p>
                                                <p t-field="o.payment_term_id.name"/>
                                            </td>
                                        </tr>
                                        <tr t-if="o.so_po_number">
                                            <td colspan="2" >
                                                <p>SO No/ PO No</p>
                                                <p t-field="o.so_po_number"/>
                                            </td>
                                        </tr>
                                        <tr t-if="o.type == 'out_invoice'">
                                            <td colspan="2" >
                                                <p>Delivery No</p>
                                                <!-- <p><t t-esc="','.join(o.picking_ids.mapped('name'))"/></p> -->
                                                <p t-if="o.picking_ids"><t t-esc="''.join(o.picking_ids[0].mapped('name'))"/></p>
                                            </td>
                                        </tr>
                                    </table>
                                </div>


                    </div>
        </template>

        <template id="row1">
            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-condensed" name="invoice_line_table" style="border: 1px solid @gray;">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="hidden">Source Document</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Unit Price</th>
                                <th t-if="display_discount" class="text-right">Disc.(%)</th>
                                <th class="text-right">Taxes</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <tr t-foreach="o.invoice_line_ids" t-as="l">
                                <td style="border: 1px solid @gray;"><span t-field="l.name"/></td>
                                <td class="hidden"><span t-field="l.origin"/></td>
                                <td class="text-right" style="border: 1px solid @gray;">
                                    <span t-field="l.quantity"/>
                                    <span t-field="l.uom_id"  groups="product.group_uom"/>
                                </td>
                                <td class="text-right" style="border: 1px solid @gray;">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <!-- <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/> -->
                                    <span t-esc="', '.join(map(lambda x: x.name, l.invoice_line_tax_ids))"/>
                                </td>
                                <td class="text-right" id="subtotal">
                                    <span t-field="l.price_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l">
                                <td t-translation="off">&amp;nbsp;</td>
                                <td class="hidden"></td>
                                <td></td>
                                <td></td>
                                <td t-if="display_discount"></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
        </template>
