    <template id="sorow1">
        <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <t t-foreach="doc.order_lines_layouted()" t-as="page">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th class="text-right">Taxes</th>
                            <th class="text-right" groups="sale.group_show_price_subtotal">Amount</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                           
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td><span t-esc="l.name"/></td>
                                    <td class="text-right">
                                        <span t-if="(l.product_uom_qty).is_integer()==False" t-field="l.product_uom_qty"/>
                                        <span t-if="(l.product_uom_qty).is_integer()" t-esc="'{:,.0f}'.format(l.product_uom_qty)"
                                        />
                                        <span t-field="l.product_uom" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-if="(l.price_unit).is_integer()==False" t-field="l.price_unit"/>
                                        <span t-if="(l.price_unit).is_integer()" t-esc="'{:,.0f}'.format(l.price_unit)"
                                        />
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-if="(l.discount).is_integer()==False" t-field="l.discount"/>
                                        <span t-if="(l.discount).is_integer()" t-esc="'{:,.0f}'.format(l.discount)"
                                        />
                                    </td>
                                    <td class="text-right">
				                     <span t-esc="', '.join(map(lambda x: x.name, l.tax_id))"/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_subtotal">
                                        <span t-if="(l.price_subtotal).is_integer()==False" t-field="l.price_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        <span t-if="(l.price_subtotal).is_integer()" t-field="doc.pricelist_id.currency_id.symbol"/>      
                                        <span t-if="(l.price_subtotal).is_integer()" t-esc="'{:,.0f}'.format(l.price_subtotal)"
                                        />
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_total">
                                        <span t-if="(l.price_total).is_integer()==False" t-field="l.price_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        <span t-if="(l.price_total).is_integer()" t-field="doc.pricelist_id.currency_id.symbol"/>      
                                        <span t-if="(l.price_total).is_integer()" t-esc="'{:,.0f}'.format(l.price_total)"
                                        />
                                    </td>
                                </tr>
                            </t>

                            <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                <tr class="text-right">
                                    <td colspan="6">
                                        <strong>Subtotal: </strong>
                                        <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                        <span  t-if="(subtotal).is_integer()==False" t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                        <span t-if="(subtotal).is_integer()" t-field="doc.pricelist_id.currency_id.symbol"/>      
                                        <span t-if="(subtotal).is_integer()" t-esc="'{:,.0f}'.format(subtotal)"
                                        />
                                    </td>
                                </tr>
                            </t>

                        </t>
                    </tbody>
                </table>

                <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                    <p style="page-break-before:always;"> </p>
                </t>
            </t>
    </template>
