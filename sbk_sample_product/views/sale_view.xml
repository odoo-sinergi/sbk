<odoo>
    <data>
        <record model="ir.ui.view" id="sale_order_sample_tree">
            <field name="name">sale.order.line.sample</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="is_sample"/>
                </xpath>
            </field>
        </record>
        <record model="ir.ui.view" id="sale_order_sample_form">
            <field name="name">sale.order.sample.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="is_sample"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>