<openerp>
    <data>
        <report
            id="sbs_excel_statement"
            model="sbk.bank.statement.report.wiz"
            string="Export To Excel"
            report_type="xlsx"
            name="sbk_bank_statement.sb_statement"
            file="sb_statement"
            />
        <record id="view_sbk_bank_statement_report_form" model="ir.ui.view">
            <field name="name">sbk.bank.statement.report.form</field>
            <field name="model">sbk.bank.statement.report.wiz</field>
            <field name="arch" type="xml">
                <form string="Bank Statement Report" create="false" edit="false" save="false" discard="false">
                <header>
                    <button name="run_process" string="Process" type="object" class="btn-primary"/>
                    <button name="export_to_excel" string="Export To Excel" type="object" class="btn-primary" />
                </header>
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date" />
                    </group>
                    <group>
                        <field name="s_balance"/>
                        <field name="e_balance" />
                    </group>
                </group>
                <notebook>
                    <page string="Bank Statement Report Lines">
                        <field name="statement_lines" readonly="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="label"/>
                                <field name="partner"/>
                                <field name="reference"/>
                                <field name="code_name" string="Code/Name"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
              </form>
            </field>
        </record>
        <record id="action_sbk_bank_statement_report" model="ir.actions.act_window">
            <field name="name">Bank Statement Report</field>
            <field name="res_model">sbk.bank.statement.report.wiz</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="view_id" ref="view_sbk_bank_statement_report_form"/>
        </record>
        <menuitem id="menu_bank_statement_report" name="Bank Statement Report" action="action_sbk_bank_statement_report" parent="account.menu_finance_reports"/>
    </data>
</openerp>