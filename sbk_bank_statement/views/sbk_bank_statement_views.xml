<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <report
            id="sbs_excel_statement"
            model="account.bank.statement"
            string="Export To Excel"
            report_type="xlsx"
            name="sbk_bank_statement.sb_statement"
            file="sb_statement"
            />

        <record id="view_bank_statement_form_inheritted" model="ir.ui.view">
            <field name="name">account.bank.statement.form.inheritted</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <!-- <xpath expr="//header/button[@name='check_confirm_bank']" position="after">
                    <button name="export_to_excel" string="Export to Excel" type="object" class="btn-primary" />
                </xpath> -->
                <xpath expr="//tree/field[@name='ref']" position="after">
                    <field name="code_name" options="{'no_create': True, 'no_create_edit':True}"/>
                    <field name="debit"/>
                    <field name="credit"/>
                </xpath>
            </field>
        </record>

        <record id="sbk_code_name_form" model="ir.ui.view">
            <field name="name">sbk.code.name.form.view</field>
            <field name="model">sbk.code.name</field>
            <field name="arch" type="xml">
            <form>
              <sheet>
                  <group>
                      <field name="code"/>
                      <field name="name"/>
                  </group>
              </sheet>
            </form>
            </field>
        </record>

        <record id="sbk_code_name_tree_view" model="ir.ui.view">
            <field name="name">sbk.code.name.view.tree</field>
            <field name="model">sbk.code.name</field>
            <field name="arch" type="xml">
            <tree>
                  <field name="code"/>
                  <field name="name"/>
            </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sbk_code_name">
            <field name="name">SBK Code Name</field>
            <field name="res_model">sbk.code.name</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_sbk_code_name" name="Code/Name" parent="account.account_account_menu" action="action_sbk_code_name"/>
    </data>
</openerp>

