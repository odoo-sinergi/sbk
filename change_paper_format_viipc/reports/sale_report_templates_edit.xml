<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <template id="report_saleorder_inherit" inherit_id="sale.report_saleorder_document">
            <xpath expr="//t[@t-set='address']" position="replace">
                <div class="row">
                    <div class="col-xs-6">
                        <p t-if="doc.state not in ['draft','sent']">Sold To:</p>
                        <p t-if="doc.state in ['draft','sent']">Bill To:</p>
                        <t t-if="doc.partner_invoice_id">
                            <div t-field="doc.partner_invoice_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </t>
                        <t t-else="">
                            <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        </t>
                    </div>
                    <div class="col-5 offset-4">
                        <p>Delivered To:</p>
                        <t t-if="doc.partner_shipping_id">
                            <div t-field="doc.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                        </t>    
                        <t t-else="">
                            <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        </t>
                    </div>
                </div>
            </xpath>

            <!-- Edit Information -->
            <xpath expr="//div[@class='row mt32 mb32' and @id='informations']" position="replace">
                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.user_id.name" class="col-xs-3">
                        <p>Salesperson:</p>
                        <p t-field="doc.user_id"/>
                    </div>
                    <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-3 offset-4">
                        <p>Order #:</p>
                        <p t-field="doc.name"/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-3 offset-4">
                        <p>Quotation #:</p><p t-field="doc.name"/>
                        
                    </div>
                    <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-2 offset-4">
                        <p>Date Ordered:</p>
                        <p t-field="doc.confirmation_date"/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-xs-3">
                        <p>Quotation Date:</p>
                        <p t-field="doc.date_order"/>
                    </div>

                    <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                        <p>Payment Terms:</p>
                        <p t-field="doc.payment_term_id"/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-xs-3">
                        <p>Expiration Date:</p>
                        <p t-field="doc.validity_date"/>
                    </div>
                </div>
            </xpath>

            <!-- Change style of the table -->
            <xpath expr="//table[@class='table table-sm o_main_table']" position="replace">
                <!--<table class="table table-bordered" style="border:black;">-->
                  <table width="100%" style="border: 1px solid black;">
                    <thead>
                        <tr>
                            <th style="border: 1px solid black;" class="text-center">QTY</th>
                            <th style="border: 1px solid black;" class="text-center">DESCRIPTION</th>
                            <th style="border: 1px solid black;" class="text-center">PRICE</th>
                            <th t-if="display_discount" style="border: 1px solid black;" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <!-- <th class="text-right">Taxes</th> -->
                            <th style="border: 1px solid black;" class="text-center">AMOUNT(S$)</th>
                            <th style="border: 1px solid black;" class="text-center price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                
                                <td class="text-center" style="border: 1px solid black;">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td style="border: 1px solid black;"><span t-field="line.name"/></td>
                                <td class="text-center">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" style="border: 1px solid black;" class="text-center" groups="sale.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                <!-- <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td> -->
                                <td class="text-center o_price_total" style="border: 1px solid black;">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16">Sub Total</strong>
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                </td>
                            </tr>
                            
                             
                                

                        </t>
                    </t>
                </tbody>
                </table>
            </xpath>

            <!-- Remove current h2 -->
            <xpath expr="//h2" position="replace">
            </xpath>

            <!-- Add h2 in a different place-->
            <xpath expr="//div[@class= 'row'][1]" position="before">
              <br/>
                <h2 class="text-center" style="margin-left: -40px;">
                    <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                        <span t-if="doc.state not in ['draft','sent']" style="border: 1px solid black;"><strong>DELIVERY ORDER</strong></span>
                        <span t-if="doc.state in ['draft','sent']" style="border: 1px solid black;">QUOTATION</span>
                    </t>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <span style="border: 1px solid black;">PRO-FORMA INVOICE</span>
                    </t>
                </h2>

            </xpath>
            
            <xpath expr="//div[@class='row' and @id='total']" position="replace">
              <br/>
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                        <table class="table table-borderless table-sm">
                            <tr style="margin-left: -40px;">
                                <td><strong>SALES AMT</strong></td>
                                <td class="text-right" style="border: 1px solid black;">
                                    <span t-field="doc.amount_untaxed"/>
                                </td>
                            </tr>
                           <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td>
                                          <strong>
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/></span>
                                          </strong>
                                        </td>
                                        <td class="text-right o_price_total" style="border: 1px solid black;">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td>
                                            <strong><span t-esc="amount_by_group[0]"/></strong>
                                        </td>
                                        <td class="text-right o_price_total" style="border: 1px solid black;">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr style="margin-top: -40px;">
                                <td><strong>GST</strong></td>
                                <td class="text-right" style="border: 1px solid black;">
                                    <span t-field="doc.amount_tax"/>
                                </td>
                            </tr>
                            <tr style="margin-top: -40px;">
                                <td><strong>TOTAL AMT</strong></td>
                                <td class="text-right" style="border: 1px solid black;">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                            <tr style="margin-top:-40px;">
                                <td><strong>BALANCE DUE</strong></td>
                                <td class="text-right" style="border: 4px solid black;">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </xpath>
            <!-- Add signature <div class="row" name="total"> -->
            <!-- <xpath expr="//div[@class='row' and @id='total']" position="before">
                <div class="row" name="signature" style="margin-top: 80px;">
                    <div class="col-xs-3 pull-left" t-if="doc.state not in ['draft','sent']" style="text-align: center;">
                        <hr style="border-top: 1px solid black;"/>
                        <h5><strong>Authorised Signature</strong></h5>
                    </div>
                    <div class="col-xs-6 pull-right" style="text-align: center;">
                        <hr style="border-top: 1px solid black;"/>
                        <h5><strong>Customer's Signature And Company Stamp</strong></h5>
                        <h5 t-if="doc.state not in ['draft','sent']"><strong>Goods Received in Good Order &amp; Conditions</strong></h5>
                    </div>
                </div>
            </xpath> -->
            <!-- Add more note <div class="col-xs-4 pull-right"> -->
            <xpath expr="//div[@name='total']" position="after">
                <div class="col-xs-8 pull-left" style="margin-top: -130px;">
                    <p t-if="doc.state in ['draft','sent']">This is a computer generated letter, no signature is required.</p>
                    <p t-if="not doc.validity_date and doc.state in ['draft','sent']">Quotation is only valid for 7 days from the date of indicated avove.</p>
                    <p t-if="doc.state not in ['draft','sent']">
                        E. &amp; O.E.<br/>
                        NOTE:<br/>
                        1) Above Goods received in good order &amp; condition .<br/>
                        2) Goods sold are not returnable<br/>
                        3) No exchange after 7 Days.<br/>
                        4) All Cheque should be crossed and make payable to "VIIPCTRADE PTE LTD"<br/>
                    </p>
                </div>
            </xpath>
            <xpath expr="//div[@class='col-xs-8 pull-left']" position="after">
                <div class="row">
                    <div class="col-xs-6" style="margin-top: 80px;">
                        <hr style="border-top: 1px solid black;"/>
                        <h5><strong>Authorised Signature</strong></h5> 
                    </div>
                    <div class="col-6 offset-3" style="margin-top: 80px;">
                        <hr style="border-top: 1px solid black;"/>
                        <h5><strong>Customer's Signature And Company Stamp</strong></h5>
                        <h5 t-if="doc.state not in ['draft','sent']"><strong>Goods Received in Good Order &amp; Conditions</strong></h5> 
                    </div>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>